<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="001" author="developer" context="dev,test,prod">
        <createTable tableName="permissions">
            <column name="id" type="int4" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(50)"/>
            <column name="description" type="varchar(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="002" author="developer" context="dev,test,prod">
        <insert tableName="permissions">
            <column name="name" value="CREATE_WARD"/>
            <column name="description" value="Create new ward"/>
        </insert>

        <insert tableName="permissions">
            <column name="name" value="UPDATE_WARD"/>
            <column name="description" value="Update existing ward"/>
        </insert>

        <insert tableName="permissions">
            <column name="name" value="DELETE_WARD"/>
            <column name="description" value="Delete a ward"/>
        </insert>

        <insert tableName="permissions">
            <column name="name" value="GET_WARD"/>
            <column name="description" value="Get ward detail"/>
        </insert>

        <insert tableName="permissions">
            <column name="name" value="GET_WARDS"/>
            <column name="description" value="Get list of wards"/>
        </insert>

        <insert tableName="permissions">
            <column name="name" value="CREATE_PROVINCE"/>
            <column name="description" value="Create new province"/>
        </insert>

        <insert tableName="permissions">
            <column name="name" value="UPDATE_PROVINCE"/>
            <column name="description" value="Update existing province"/>
        </insert>

        <insert tableName="permissions">
            <column name="name" value="GET_PROVINCE"/>
            <column name="description" value="Get province detail"/>
        </insert>

        <insert tableName="permissions">
            <column name="name" value="DELETE_PROVINCE"/>
            <column name="description" value="Delete a province"/>
        </insert>

        <insert tableName="permissions">
            <column name="name" value="GET_ALL_PROVINCE"/>
            <column name="description" value="Get list of all provinces"/>
        </insert>
    </changeSet>

</databaseChangeLog>