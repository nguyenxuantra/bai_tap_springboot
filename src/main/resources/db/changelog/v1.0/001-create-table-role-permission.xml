<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="005" author="developer" context="dev,test,prod">
        <createTable tableName="role_permission">
            <column name="role_id" type="int4">
                <constraints nullable="false" primaryKey="true"
                             foreignKeyName="fk_role_permission"
                             referencedTableName="roles"
                             referencedColumnNames="id"
                />
            </column>
            <column name="permission_id" type="int4">
                <constraints nullable="false" primaryKey="true"
                             foreignKeyName="fk_permission_id"
                             referencedTableName="permissions"
                             referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>


    <changeSet id="006" author="developer" context="dev,test,prod">
